<% provide(:title, "Sign in") %>
<h1 class="pad">Sign in</h1>


  <%= form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
      <!--<div class="col-md-2 col-md-offset-2 text-right">-->
        <%= f.label :email, class: "col-sm-2 col-md-offset-2 control-label" %>
      <!--</div>-->
      <div class="col-md-6">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <!--<div class="col-md-2 col-md-offset-2 text-right">-->
        <%= f.label :password, class: "col-md-2 col-md-offset-2 control-label" %>
      <!--</div>-->
      <div class="col-md-6">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <!--<div class="row push">-->
    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
        <%#= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-offset-4 col-md-8">New user? <%= link_to "Sign up now!", signup_path %></div>
  </div>
</div>